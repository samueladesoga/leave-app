<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0"><%= t('.resend_confirmation', :default => 'Resend confirmation instructions') %></h3>
                        </div>
                        <div class="card-body">
                          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: "form" }) do |f| %>
                              <%= devise_bootstrap_error_messages! %>
                              <div class="row">
                                <div class="form-group col-md-12">
                                  <%= f.label :email, class: "col-form-label" %>
                                  <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
                                </div>
                              </div>
                              <%= f.submit  t('.resend_confirmation', :default => "Resend confirmation instructions"), class: "btn btn-primary" %>
                          <%end%>
                          <br>
                          <%= render "devise/shared/links" %>
                        </div>

                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->

                </div>


            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->