<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0"><%= t('.change_password', :default => 'Change your password') %></h3>
                        </div>
                        <div class="card-body">
                          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: "form" }) do |f| %>
                              <%= devise_bootstrap_error_messages! %>
                              <%= f.hidden_field :reset_password_token %>

                              <div class="form-group">
                                <%= f.label :password, "New password" %>
                                <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
                                <% if @minimum_password_length %>
                                    <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
                                <% end %>
                              </div>
                              <div class="form-group">
                                <%= f.label :password_confirmation, "Confirm new password"  %>
                                <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
                              </div>

                              <%= f.submit  t('.change_password_submit', :default => "Change my password"), class: "btn btn-primary" %>
                          <%end%>
                          <br>
                        <%= render "devise/shared/links" %>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->

                </div>


            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->