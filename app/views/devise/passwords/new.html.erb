<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0"><%= t('.forgot_password', :default => 'Forgot your password?') %></h3>
                        </div>
                        <div class="card-body">
                          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: "form" }) do |f| %>
                              <%= devise_bootstrap_error_messages! %>
                              <div class="form-group">
                                <%= f.label :email %>
                                <%= f.email_field :email, autofocus: true, class: "form-control" %>
                              </div>
                              <%= f.submit  t('.forgot_password_submit', :default => "Send me reset password instructions"), class: "btn btn-primary" %>
                          <%end%>
                          <br>
                          <%= render "devise/shared/links" %>
                        </div>

                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->

                </div>


            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->