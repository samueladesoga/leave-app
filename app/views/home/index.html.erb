
<div class="row">
  <div class="col-sm-12 text-xs-center bootstrap-welcome">
    <h3 class="section-title text-center m-5">Welcome back <%= current_user.email %></h3>

    <h1>Your Leave Requests</h1>

    <div class="col-md-10 ml-auto mr-auto">
		<table class="table table-striped table-responsive-md">
		  <thead>
		    <tr>
		      <th>Commence</th>
		      <th>End</th>
		      <th>Reason</th>
		      <th>Approved</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @leave_requests.each do |leave_request| %>
		      <tr>
		        <td><%= leave_request.commence.strftime("%A, %B %d, %Y") %></td>
		        <td><%= leave_request.end_date.strftime("%A, %B %d, %Y") %></td>
		        <td><%= leave_request.reason %></td>
		        <td><%= leave_request.approved %></td>
		        <td><%= link_to 'Edit', edit_leave_request_path(leave_request) %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
  </div>
</div>
